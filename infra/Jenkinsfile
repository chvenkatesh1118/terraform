pipeline {
agent any
  parameters { choice(name: 'task',
                      choices: ['create',
                                 'destroy'],
                      description: '') }

  stages{
   stage('create infra'){
    when {
                   expression {
                      return params.task == 'create'
                   }
               }
      steps{
      sh 'cd roboshop; terraform init'
      sh 'cd roboshop; terraform plan'
      sh 'cd roboshop; terraform apply -auto-approve'
      
      }
    }

    stage('destroy infra'){
        when {
                       expression {
                          return params.task == 'destroy'
                       }
                   }
          steps{

          sh 'cd roboshop; terraform destroy -auto-approve'

          }
        }

  }
}
